<style>

:root {
  --main-heading-font-family: "Bricolage Grotesque", sans-serif;
  --main-heading-font-size: 30px;
  --paragraph-font-size: 18px;
  --small-font-size: 14px;
  --paragraph-font -family: "Inter", sans-serif;

  --off-white: #f5f5f5;
  --off-black: #1a1a1a;
  --accent-color: #ffc406; /* Gold */
  --pure-white: white;
  --pure-black: black;

  --text-input-padding: 1.5rem;
  --text-input-height: 50px;
  --border-radius: 5px;
}

/* Main layout */
body {
  background: var(--off-white);
}
.content-for-layout {
  flex: none !important;
}
#header-group {
  box-shadow: 3px 0px 8px -6px;
  position: relative;
}
#MainContent {
  width: 650px !important;
  padding: 20px;
} 
.header-main-desktop-container {
  display: flex;3
  margin: 0 auto;
  min-height: 100vh;
  width: 100%;
  gap: 5px;
  justify-content: center;
}

/* General heading fonts */
h1,
#header-group .header-list .title-container span {
  font-family: var(--main-heading-font-family);
  color: var(--off-black);
  font-weight: bold;
  text-decoration: none;
}
a {
  text-decoration: none;
  color: var(--off-black);
}
.title {
  margin-top: 0;
}
input, textarea {
  padding: var(--text-input-padding);
  font-size: var(--paragraph-font-size);
  border-radius: var(--border-radius);
  min-height: var(--text-input-height);
}
  
/* Remove heading menu item text on small desktop */
@media screen and (max-width: 900px) {
  .header-main-desktop-container {
    justify-content: center;
  }
  #MainContent {
    width: 80% !important;
  }
  .wv-custom-header {
   width: 60px !important;
  }
  .wv-custom-header .title-container,
  .wv-custom-header .title-container > span {
    display: none;
  }
  .wv-custom-header .header-list > a > button {
    width: fit-content;
  }
}
@media screen and (max-width: 450px) {
  #MainContent {
    width: 92% !important;
  }
}

/* header styling */
header {
  height: 100%;
}
.header-main-desktop-container .header > .header__row > .header__columns {
  display: flex;
  flex-direction: column;
}
.header-main-desktop-container .header > .header__row > .header__columns > .header__column {
  display: flex;
  flex-direction: column;
}

/* mobile header change */
@media screen and (max-width: 580px) {
  #MainContent {
    padding: 30px 0px 55px 0px;
  }
  #header-group {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    background: var(--off-white);
    box-shadow: 0px -3px 8px -6px;
  }
  #header-group .wv-custom-header {
    flex-direction: row;
    width: 100vw !important;
    gap: 15px;
  }
  #header-group .wv-custom-header .header-list {
    flex-direction: row;
  }
  #added-to-cart-popup {
    top: -82px;
  }
  .wv-custom-header .header-top {
    width: 75%;
  }
  .wv-custom-header .header-bottom {
    width: 25%;
  }
  .wv-custom-header .header-list > a {
    justify-content: center;
  }
}
@media screen and (max-width: 360px) {
  :root {
    --main-heading-font-size: 25px;
  }
  #header-group .wv-custom-header {
    gap: 20px;
    padding: 6px;
  }
  .wv-custom-header .header-list > a > button {
    padding: 0;
  }
  .wv-custom-header .cart-header-container .image-container .cart-qty-container {
    width: 22px !important;
    top: -2px !important;
    right: -8px !important;
  }
  #header-cart-count {
    font-size: 13px;
  }
  .predictive-search__reset-button {
    display: none !important;
  }
  .predictive-search-results__list {
    display: flex !important;
    flex-direction: column !important;
  }
  .wv-custom-header .header-list {
    gap: 8px;
  }
}
@media screen and (max-width: 400px) {
  input[type="file"] {
    max-width: 300px;
  }
}

