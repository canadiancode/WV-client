{{ 'customer.css' | asset_url | stylesheet_tag }}

<style>
#wv-creator-dashboard {
  padding: 1rem 0rem;
  display: flex;
  flex-direction: column;
}
#wv-creator-dashboard .customer__title {
  font-size: var(--main-heading-font-size);
  font-family: var(--main-heading-font-family);
}

/* above chart quick view values */
#wv-creator-dashboard .chart-timeframe-container {
  margin-bottom: 1rem;
}
#wv-creator-dashboard .chart-timeframe-container select {
  cursor: pointer;
  padding: 5px;
}
#wv-creator-dashboard .quick-view-chart {
  box-shadow: 0px 0px 15px -10px black;
  border-radius: 5px;
  padding: 20px;
  margin-bottom: 2rem;
}
#wv-creator-dashboard .quick-view-chart .quick-view-dash {
  display: flex;
  justify-content: space-between;
}
#wv-creator-dashboard .quick-view-chart .quick-view-dash > div {
  display: flex;
  flex-direction: column;
}
#wv-creator-dashboard .quick-view-chart .quick-view-dash .label {
  text-decoration: underline;
}
#wv-creator-dashboard .quick-view-chart .quick-view-dash .value {
  font-weight: bold;
}

/* charting styling */
#wv-creator-dashboard .quick-view-chart .chart {
  margin-top: 2rem;
}

/* payout section */
#wv-creator-dashboard .payout-container {
  box-shadow: 0px 0px 15px -10px black;
  border-radius: 5px;
  padding: 20px;
}
#wv-creator-dashboard .payout-container h3 {
  font-family: var(--main-heading-font-family);
  font-size: var(--main-heading-font-size);
}
#wv-creator-dashboard .payout-container .payout-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 2rem;
}
#wv-creator-dashboard .payout-container .labels {
  display: flex;
  justify-content: space-between;
}
#wv-creator-dashboard .payout-container .labels .label {
  text-decoration: underline;
}
#wv-creator-dashboard .payout-container .values {
  display: flex;
  justify-content: space-between;  
}
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 0px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="customer account section-{{ section.id }}-padding">
  <div>
    <h1 class="customer__title">{{ 'customer.account.title' | t }}</h1>
    <a href="{{ routes.account_logout_url }}">
      <span class="svg-wrapper">
        {{- 'icon-account.svg' | inline_asset_content -}}
      </span>
      {{ 'customer.log_out' | t }}
    </a>
  </div>

  {% comment %}
  <div>
    <div>
      <h2>{{ 'customer.orders.title' | t }}</h2>

      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          <table role="table" class="order-history">
            <caption class="visually-hidden">
              {{ 'customer.orders.title' | t }}
            </caption>
            <thead role="rowgroup">
              <tr role="row">
                <th id="ColumnOrder" scope="col" role="columnheader">{{ 'customer.orders.order_number' | t }}</th>
                <th id="ColumnDate" scope="col" role="columnheader">{{ 'customer.orders.date' | t }}</th>
                <th id="ColumnPayment" scope="col" role="columnheader">{{ 'customer.orders.payment_status' | t }}</th>
                <th id="ColumnFulfillment" scope="col" role="columnheader">
                  {{ 'customer.orders.fulfillment_status' | t }}
                </th>
                <th id="ColumnTotal" scope="col" role="columnheader">{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody role="rowgroup">
              {%- for order in customer.orders -%}
                <tr role="row">
                  <td
                    id="RowOrder"
                    role="cell"
                    headers="ColumnOrder"
                    data-label="{{ 'customer.orders.order_number' | t }}"
                  >
                    <a
                      href="{{ order.customer_url }}"
                      aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}"
                    >
                      {{ order.name }}
                    </a>
                  </td>
                  <td headers="RowOrder ColumnDate" role="cell" data-label="{{ 'customer.orders.date' | t }}">
                    {{ order.created_at | time_tag: format: 'date' }}
                  </td>
                  <td
                    headers="RowOrder ColumnPayment"
                    role="cell"
                    data-label="{{ 'customer.orders.payment_status' | t }}"
                  >
                    {{ order.financial_status_label }}
                  </td>
                  <td
                    headers="RowOrder ColumnFulfillment"
                    role="cell"
                    data-label="{{ 'customer.orders.fulfillment_status' | t }}"
                  >
                    {{ order.fulfillment_status_label }}
                  </td>
                  <td headers="RowOrder ColumnTotal" role="cell" data-label="{{ 'customer.orders.total' | t }}">
                    {{ order.total_net_amount | money_with_currency }}
                  </td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- else -%}
          <p>{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}

        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <span class="svg-wrapper">
                        {{- 'icon-caret.svg' | inline_asset_content -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <span class="svg-wrapper">
                        {{- 'icon-caret.svg' | inline_asset_content -}}
                      </span>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      {% endpaginate %}
    </div>

    <div>
      <h2>{{ 'customer.account.details' | t }}</h2>

      {{ customer.default_address | format_address }}

      <a href="{{ routes.account_addresses_url }}">
        {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
      </a>
    </div>
  </div>
  {% endcomment %}

  {% assign is_creator = false %}
  {% if customer and customer.metafields.custom.creator_page %}
    {% assign is_creator = true %}
  {% endif %}
  {% if is_creator %}
  <div id='wv-creator-dashboard'>

    <p>All of this data below is fake and hard coded. For now.</p>

    <div class='quick-view-chart'>

      <div class='chart-timeframe-container'>
        <select>
          <option value='today'>Today</option>
          <option value='yesterday'>Yesterday</option>
          <option value='7'>Last 7 days</option>
          <option value='30'>Last 30 days</option>
          <option value='90'>Last 90 days</option>
          <option value='365'>Last 365 days</option>
          <option value='all'>All Time</option>
        </select>
      </div>
      
      <div class='quick-view-dash'>
        <div class='total-earnings'>
          <span class='label'>Total earnings:</span>
          <span class='value'>$18.4k</span>
        </div>
        <div class='items-sold'>
          <span class='label'>Items sold:</span>
          <span class='value'>128</span>
        </div>
        <div class='average-sale-price'>
          <span class='label'>Average sale price:</span>
          <span class='value'>$143.25</span>
        </div>
      </div>

      <div class='chart'>
        <p>A chart will be added here</p>
      </div>
      
    </div>

    <div  class='payout-container'>
      <h3>Payouts</h3>
      
      <div class='next-payout payout-info'>
        <div class='labels'>
          <span class='label'>Next payout:</span>
          <span class='label'>Amount:</span>
        </div>
        <div class='values'>
          <span class='date value'>Monday, July 14th, 2025</span>
          <span class='date amount'>$1,240.00</span>
        </div>
      </div>

      <div class='previous-payout payout-info'>
        <div class='labels'>
          <span class='label'>Previous payouts:</span>
          <span class='label'>Amount:</span>
        </div>
        <div class='values'>
          <span class='date value'>Monday, July 9th, 2025</span>
          <span class='date amount'>$924.00</span>
        </div>
      </div>
      
    </div>

  </div>
  {% elsif customer %}
    {% render 'creator-signup-form' %}
  {% else %}
    {% render 'creator-login-page' %}
  {% endif %}
</div>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
